<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Group_2.AdminPanelPage"
             Title="Ylläpito">

    <VerticalStackLayout Padding="16" Spacing="12">

        <Picker x:Name="TypePicker"
                Title="Näytä"
                SelectedIndexChanged="OnTypeChanged">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Tapahtumat</x:String>
                    <x:String>Käyttäjät</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <SearchBar x:Name="SearchBar"
                   Placeholder="Hae..."
                   TextChanged="OnSearchTextChanged" />

        <!-- Tapahtumat -->
        <CollectionView x:Name="EventsList"
                        SelectionMode="Single"
                        SelectionChanged="OnEventSelectionChanged"
                        IsVisible="true"
                        HeightRequest="150">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="Gray" Padding="8" Margin="2">
                        <Label Text="{Binding Title}" FontAttributes="Bold"/>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Käyttäjät -->
        <CollectionView x:Name="UsersList"
                        SelectionMode="Multiple"
                        SelectionChanged="OnUserSelectionChanged"
                        IsVisible="false"
                        HeightRequest="150">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="Gray" Padding="8" Margin="2">
                        <VerticalStackLayout>
                            <Label Text="{Binding Name}" />
                            <Label Text="{Binding Email}" FontSize="12" TextColor="Gray"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Label x:Name="EmptyLabel" Text="Ei näytettäviä tietoja" IsVisible="false" HorizontalOptions="Center" />

        <HorizontalStackLayout Spacing="10">
            <Button Text="Lisää" Clicked="OnAddClicked"/>
            <Button Text="Muokkaa" Clicked="OnEditClicked"/>
            <Button Text="Poista" Clicked="OnDeleteClicked"/>
        </HorizontalStackLayout>

        <!-- Osallistujien lisäys -->
        <Button Text="Lisää valitut käyttäjät tapahtumaan"
                Clicked="OnAddParticipantsClicked"
                IsVisible="true" />

    </VerticalStackLayout>
</ContentPage>