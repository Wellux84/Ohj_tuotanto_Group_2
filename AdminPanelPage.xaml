<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Group_2"
             x:Class="Group_2.AdminPanelPage">

    <ContentPage.Resources>
        <!-- Varmista että sinulla on public-luokka Group_2.NullToBoolConverter -->
        <local:NullToBoolConverter x:Key="NullToBoolConverter"/>
        <Style TargetType="Entry">
            <Setter Property="Margin" Value="0,4"/>
        </Style>
    </ContentPage.Resources>

    <StackLayout Padding="16" Spacing="12">

        <Picker x:Name="TypePicker"
                Title="Näytä"
                SelectedIndexChanged="OnTypeChanged">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Tapahtumat</x:String>
                    <x:String>Käyttäjät</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <SearchBar x:Name="SearchBar"
                   Placeholder="Hae..."
                   TextChanged="OnSearchTextChanged" />

        <!-- Tapahtumat -->
        <CollectionView x:Name="EventsList"
                        ItemsSource="{Binding events}"
                        SelectedItem="{Binding SelectedEvent, Mode=TwoWay}"
                        SelectionMode="Single"
                        IsVisible="{Binding IsEventView}"
                        SelectionChanged="OnEventSelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Stroke="LightGray" StrokeThickness="1" Margin="0,4" Padding="8" StrokeShape="Rectangle">
                        <StackLayout>
                            <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="18"/>
                            <Label Text="{Binding Subtitle}" FontSize="14"/>
                            <Label Text="{Binding Date, StringFormat='{}{0:dd.MM.yyyy}'}" FontSize="12"/>
                            <Label Text="{Binding ParticipantsDisplay}" FontSize="12" TextColor="Gray"/>
                        </StackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Käyttäjät -->
        <CollectionView x:Name="UsersList"
                        ItemsSource="{Binding users}"
                        SelectionMode="Multiple"
                        IsVisible="{Binding IsUserView}"
                        SelectionChanged="OnUserSelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Stroke="LightGray" StrokeThickness="1" Margin="0,4" Padding="8" StrokeShape="Rectangle">
                        <StackLayout>
                            <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="16"/>
                            <Label Text="{Binding Email}" FontSize="12"/>
                        </StackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Label x:Name="EmptyLabel" Text="Ei näytettäviä tietoja" IsVisible="False" HorizontalOptions="Center"/>

        <StackLayout Orientation="Horizontal" Spacing="8" HorizontalOptions="Center">
            <Button Text="Lisää" Clicked="OnAddClicked"/>
            <Button Text="Muokkaa"
                    Clicked="OnEditClicked"
                    IsEnabled="{Binding SelectedEvent, Converter={StaticResource NullToBoolConverter}}"/>
            <Button Text="Poista"
                    Clicked="OnDeleteClicked"
                    IsEnabled="{Binding SelectedEvent, Converter={StaticResource NullToBoolConverter}}"/>
            <Button Text="Lisää osallistujia"
                    Clicked="OnAddParticipantsClicked"
                    IsEnabled="{Binding SelectedEvent, Converter={StaticResource NullToBoolConverter}}"/>
            <Button Text="Muokkaa osallistujia"
                    Clicked="OnEditParticipantsClicked"
                    IsEnabled="{Binding SelectedEvent, Converter={StaticResource NullToBoolConverter}}"/>
        </StackLayout>

    </StackLayout>
</ContentPage>
